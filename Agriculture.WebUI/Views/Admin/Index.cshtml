@using EntityLayer.Concrete;
@model List<Admin>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Admin Listesi</h1>

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Admin Listesi</h4>

            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Kullanıcı Adı</th>
                          
                            <th>Sil</th>
                            <th>Düzenle</th>
                          
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.AdminId</td>
                                <td>@item.UserName</td>
                                
                              

                                <td><a class="btn btn-outline-warning" asp-controller="Admin" asp-action="Delete" asp-route-id="@item.AdminId">Sil</a></td>
                                <td><a class="btn btn-outline-secondary" asp-controller="Admin" asp-action="Update" asp-route-id="@item.AdminId">Düzenle</a></td>

                            </tr>
                        }

                    </tbody>
                </table>
                <br />
                <a asp-controller="Admin" asp-action="AddAdmin" class="btn btn-outline-info">Yeni Admin Girişi</a>
            </div>
        </div>
    </div>
</div>
