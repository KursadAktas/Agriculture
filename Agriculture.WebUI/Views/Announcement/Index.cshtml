@using EntityLayer.Concrete;
@model List<Announcement>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Duyuru Listesi</h4>

            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Başlık</th>
                            <th>Tarih</th>
                            <th>Sil</th>
                            <th>Düzenle</th>
                            <th>Aktif Yap</th>
                            <th>Pasif Yap</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.AnnouncementId</td>
                                <td>@item.Title</td>
                                <td>@item.Date</td>
                                <td><a class="btn btn-outline-danger" asp-controller="Announcement" asp-action="Delete" asp-route-id="@item.AnnouncementId">Sil</a></td>
                                <td><a class="btn btn-outline-success" asp-controller="Announcement" asp-action="Update" asp-route-id="@item.AnnouncementId">Güncelle</a></td>

                                <td><a class="btn btn-outline-warning" asp-controller="Announcement" asp-action="StatusTrue" asp-route-id="@item.AnnouncementId">Aktif Yap</a></td>
                                <td><a class="btn btn-outline-secondary" asp-controller="Announcement" asp-action="StatusFalse" asp-route-id="@item.AnnouncementId">Pasif Yap</a></td>

                            </tr>
                        }

                    </tbody>
                </table>
                <a asp-controller="Announcement" asp-action="AddAnnouncement" class="btn btn-outline-info">Yeni Duyuru Girişi</a>
            </div>
        </div>
    </div>
</div>

