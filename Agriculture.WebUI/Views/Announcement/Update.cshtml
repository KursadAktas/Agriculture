@using EntityLayer.Concrete;
@model Announcement
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Duyuru Güncelleme Sayfası</h4>

            <form class="forms-sample" method="post">
                @Html.HiddenFor(x=>x.AnnouncementId)
                <div class="form-group">
                    <label>Başlık</label>

                    <input type="text" class="form-control" id="exampleInputName1" placeholder="Başlık.." asp-for="Title">
                </div>
                <div class="form-group">
                    <label>Tarih</label>

                    <input type="date" class="form-control" id="exampleInputName1" placeholder="Tarih.." asp-for="Date">
                </div>
                <div class="form-group">
                    <label>Açıklama</label>
                    <textarea cols="30" rows="5" asp-for="Description" class="form-control" placeholder="Açıklama giriniz.."></textarea>

                </div>



                <button type="submit" class="btn btn-info me-2">Kaydet</button>

            </form>
        </div>
    </div>
</div>

