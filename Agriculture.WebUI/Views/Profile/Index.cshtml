@model UserEditViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Profil Düzenleme Sayfası</h4>

            <form class="forms-sample" method="post">
               
                <div class="form-group">
                    <label >Mail Adresi</label>
                    
                    <input type="text" class="form-control" id="exampleInputName1" placeholder="Mail adresi giriniz.." asp-for="mail">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Phone Number</label>
                  
                    <input type="tel" class="form-control" id="exampleInputEmail3" placeholder="Telefon numarası giriniz.." asp-for="phone">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Şifre</label>

                    <input type="tel" class="form-control" id="exampleInputEmail3" placeholder="Yeni şifrenizi giriniz.." asp-for="password">
                </div>

                <div class="form-group">
                    <label for="exampleInputEmail3">Şifre Tekrar</label>

                    <input type="tel" class="form-control" id="exampleInputEmail3" placeholder="Yeni şifrenizi tekrar giriniz.." asp-for="confirmPassword">
                </div>

                <button type="submit" class="btn btn-info me-2">Kaydet</button>

            </form>
        </div>
    </div>
</div>
