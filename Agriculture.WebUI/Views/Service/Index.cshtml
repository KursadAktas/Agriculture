@using EntityLayer.Concrete;
@model List<Service>
@{

    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Hizmet Listesi</h4>
          
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                     <th>#</th>
                     <th>Başlık</th>
                     <th>Sil</th>
                     <th>Düzenle</th>
                        </tr>
                    </thead>
                    <tbody>
                       @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ServiceId</td>
                                <td>@item.Title</td>
                                <td><a class="btn btn-outline-danger" asp-controller="Service" asp-action="Delete" asp-route-id="@item.ServiceId">Sil</a></td>
                                <td><a class="btn btn-outline-success" asp-controller="Service" asp-action="Update" asp-route-id="@item.ServiceId">Güncelle</a></td>

                            </tr>
                        }
                            
                    </tbody>
                </table>
                <a asp-controller="Service" asp-action="AddServise" class="btn btn-outline-info">Yeni Hizmet Girişi</a>
            </div>
        </div>
    </div>
</div>
