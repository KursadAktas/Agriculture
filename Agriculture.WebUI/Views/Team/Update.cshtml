@using EntityLayer.Concrete;
@model Team
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Takım Arkadaşı Bilgi Güncelleme Sayfası</h4>

            <form class="forms-sample" method="post">
                <div class="form-group">
                    @Html.HiddenFor(x=>x.TeamId)
                    <label for="exampleInputName1">Adı Soyadı</label>
                    <span asp-validation-for="PersonelName" class="text-danger"></span>
                    <input type="text" class="form-control" id="exampleInputName1" placeholder="Ad Soyad.." asp-for="PersonelName">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Görev</label>
                    <span asp-validation-for="Title" class="text-danger"></span>
                    <input type="tel" class="form-control" id="exampleInputEmail3" placeholder="Görev.." asp-for="Title">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Görsel Yolu</label>
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    <input type="tel" class="form-control" id="exampleInputEmail3" placeholder="Görsel.." asp-for="ImageUrl">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Facebook</label>
                    <input type="tel" class="form-control" id="exampleInputEmail3" placeholder="facebook linkini giriniz.." asp-for="FacebookUrl">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Instagram</label>
                    <input type="tel" class="form-control" id="exampleInputEmail3" placeholder="instagram linki.." asp-for="InstagramUrl">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Twitter</label>
                    <input type="tel" class="form-control" id="exampleInputEmail3" placeholder="twitter linki.." asp-for="TwitterUrl">
                </div>

                <div class="form-group">
                    <label for="exampleInputEmail3">Web Sitesi</label>
                    <input type="tel" class="form-control" id="exampleInputEmail3" placeholder="weblink.." asp-for="WebSiteUrl">
                </div>


                <button type="submit" class="btn btn-info me-2">Kaydet</button>

            </form>
        </div>
    </div>
</div>

